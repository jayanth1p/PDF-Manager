        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>



        <ScrollViewer HorizontalAlignment="Stretch" HorizontalScrollBarVisibility="Auto">
            <Grid  x:Name="TabArea"
           DockPanel.Dock="Bottom" Margin="10,29,0,0">
            </Grid>
        </ScrollViewer>


        <StackPanel Grid.Column="1" VerticalAlignment="Center">

            <Button x:Name="Splitlbut" Click="Splitlbut_Click" Content="Load Pdf" Margin="20 10" VerticalAlignment="Stretch"/>
            <Button x:Name="Splitclbut" Click="Splitclbut_Click" Content="Close Current Pdf" Margin="20 10" VerticalAlignment="Stretch"/>
            <ListBox x:Name="SplitList" FontSize="18" Margin="0 10" VerticalAlignment="Stretch"/>

            <Label Content="Enter Split Page No" FontSize="14"  HorizontalAlignment="Center" Margin="0 10"  />
            <TextBox x:Name="Spointbox" Foreground="White" Margin="0 10" FontSize="18" VerticalAlignment="Stretch"/>
            <Button x:Name="AddSpoint" Click="AddSpoint_Click"  Content="Add Split Point" Margin="20 10" VerticalAlignment="Stretch"/>
            <!--<Button  Content="Close All Tabs" Margin="0 10" VerticalAlignment="Stretch"/>-->
            
                           

            <Button x:Name="Splitpdf"  Content="Split PDFs"  Click="Splitpdf_Click" Margin="20 10" VerticalAlignment="Stretch"/>
