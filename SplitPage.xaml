      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SplitPage">

    <Grid >
        <!--<Label Content="This is Split" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="TabArea"
  DockPanel.Dock="Bottom" Margin="10,29,0,0">
        </Grid>
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <Button Content="Load Pdf" Margin="0 10" VerticalAlignment="Stretch"/>
            <Button  Content="Close Tab" Margin="0 10" VerticalAlignment="Stretch"/>
            <Button  Content="Close All Tabs" Margin="0 10" VerticalAlignment="Stretch"/>

