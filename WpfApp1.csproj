<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>pdf-file-format.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="pdf-file-format.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MaterialDesignColors" Version="5.2.1" />
    <PackageReference Include="MaterialDesignThemes" Version="5.2.1" />
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.3296.44" />
    <PackageReference Include="PdfiumViewer.WPF" Version="1.0.6" />
    <PackageReference Include="PDFsharp" Version="6.2.0" />
  </ItemGroup>

</Project>
